<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/sound_art"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/sound_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sound_art"
        android:layout_toRightOf="@+id/sound_art"
        android:layout_toLeftOf="@+id/sound_duration"
        android:textColor="@color/textSecondary" />

    <TextView
        android:id="@+id/sound_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sound_user"
        android:layout_toRightOf="@+id/sound_art"
        android:layout_toLeftOf="@+id/sound_duration"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/sound_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/textSecondary" />

    <TextView
        android:id="@+id/sound_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sound_title"
        android:layout_toRightOf="@+id/sound_art"
        android:textColor="@color/textSecondary" />
    
    <ImageView
        android:id="@+id/sound_popup_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_more"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp" />
</RelativeLayout>
